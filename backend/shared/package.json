{
  "name": "@ecommerce/shared",
  "version": "1.0.0",
  "description": "Shared database models, types, and utilities for ecommerce microservices",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "seed": "ts-node database/seeders/index.ts",
    "seed:clear": "ts-node database/seeders/index.ts --clear",
    "seed:users": "ts-node database/seeders/index.ts --users-only",
    "seed:products": "ts-node database/seeders/index.ts --products-only",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "mongoose": "^7.0.0",
    "bcryptjs": "^2.4.3",
    "winston": "^3.8.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  }
}