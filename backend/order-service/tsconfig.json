{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "shared/*": ["../shared/*"]
    }
  },
  "include": [
    "src/**/*", 
    "../shared/models/**/*",
    "../shared/types/**/*",
    "../shared/utils/**/*",
    "../shared/database/connection.ts"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "**/*.test.ts", 
    "**/*.spec.ts"
  ]
}