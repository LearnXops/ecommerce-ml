    {
      "name": "Products",
      "item": [
        {
          "name": "Get Products",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data.products.length > 0) {",
                  "        pm.collectionVariables.set('product_id', response.data.products[0]._id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/products?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["products"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "search",
                  "value": "laptop",
                  "disabled": true
                },
                {
                  "key": "category",
                  "value": "electronics",
                  "disabled": true
                },
                {
                  "key": "minPrice",
                  "value": "100",
                  "disabled": true
                },
                {
                  "key": "maxPrice",
                  "value": "2000",
                  "disabled": true
                }
              ]
            }
          }
        },
